<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".SettingsFragment">

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/always_on_switch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enable 'Always On' Listening"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/wake_word_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/always_on_switch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/wake_word_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Wake Word (e.g., Hey Agent)" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/delete_api_key_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Delete API Key"
        app:layout_constraintTop_toBottomOf="@id/wake_word_input_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        app:backgroundTint="@android:color/holo_red_light" />

</androidx.constraintlayout.widget.ConstraintLayout>
